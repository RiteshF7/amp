<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/teabackground">

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha=".6"
            android:background="@drawable/background_fade">

        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:background="@drawable/ic_cross"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"></FrameLayout>

        <FrameLayout
            android:id="@+id/roomz99_logo_splash"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/logo_99roomz_red">
        </FrameLayout>

        <TextView
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/roomz99_logo_splash"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:textSize="15dp"
            style="@style/Font_family_light1"
            android:textColor="#009688"
            android:textStyle="bold"
            android:text="Signup and get â‚¹500 Travel Credits."
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_16"
                    android:layout_marginRight="@dimen/padding_16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/country"
                            android:textStyle="bold"
                            style="@style/Font_family_light1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_top_8"
                            android:layout_marginBottom="5dp"
                            android:background="@drawable/rect_light_back"
                            android:hint="+91"
                            android:inputType="phone"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:padding="10dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_20" />


                        <EditText
                            android:drawableRight="@drawable/ic_iconfinder_ph"
                            android:id="@+id/phone_num"
                            style="@style/Font_family_light1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:cursorVisible="false"
                            android:layout_marginTop="@dimen/margin_top_8"
                            android:layout_marginBottom="@dimen/margin_top_8"
                            android:background="@drawable/rect_light_back"
                            android:hint=" Phone Number"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="@dimen/text_20" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/login"
                        style="@style/Font_family_regular1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/red_style"
                        android:text="CONTINUE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_20" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_left_16"
                        android:layout_marginTop="@dimen/margin_top_16"
                        android:visibility="gone"
                        android:layout_marginRight="@dimen/margin_right_16"
                        android:layout_marginBottom="@dimen/margin_bottom_16"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_16"
                            android:layout_marginRight="@dimen/margin_right_16"
                            android:layout_marginBottom="@dimen/margin_bottom_8"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-regular"
                            android:gravity="start"
                            android:paddingTop="@dimen/padding_16"
                            android:paddingBottom="@dimen/padding_16"
                            android:text="Create Account"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_20"
                            android:visibility="gone" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_16"
                            android:layout_marginRight="@dimen/margin_right_16"
                            android:layout_marginBottom="@dimen/margin_bottom_8"
                            android:layout_weight="1"
                            android:fontFamily="sans-serif-regular"
                            android:gravity="end"
                            android:paddingTop="@dimen/padding_16"
                            android:paddingBottom="@dimen/padding_16"
                            android:text="Need Help?"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_20"
                            android:visibility="visible" />


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/or_login_text"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Or"
                        android:textColor="#ffffff"
                        android:textStyle="normal"

                        android:background="@drawable/rect_light_back"
                        style="@style/Font_family_light1"
                        android:textSize="18dp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/edit_style"
                    android:padding="10dp"
                    android:layout_marginRight="80dp"
                    android:layout_marginLeft="80dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/signin_facebook"
                        android:layout_width="50dp"
                        android:layout_height="45dp"
                        android:layout_marginRight="30dp"
                        android:background="@drawable/ic_fb_splash"
                        android:visibility="visible" />



                    <ImageView
                        android:id="@+id/signin_google"
                        android:layout_width="@dimen/iconsize"
                        android:layout_height="@dimen/iconsize"
                        android:background="@drawable/ic_gmail"
                        android:padding="30dp" />
                </LinearLayout>



            </LinearLayout>


        </ScrollView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@drawable/ic_tick_green"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                style="@style/Font_family_light1"
                android:textColor="@color/white"
                android:text="By clicking Continue, you agree to our Terms and Conditions."
                android:layout_height="wrap_content" />
            <TextView

                android:id="@+id/login_tandc"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions."
                android:textColor="#ff5252"
                style="@style/Font_family_light1"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
