<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="phoneNumbrHint"
            type="String" />
    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.4"
                android:background="@drawable/teabackground">

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".6"
                android:background="@drawable/background_fade">

            </FrameLayout>
            <FrameLayout
                android:layout_width="wrap_content"
                android:background="@drawable/ic_cross"
                android:layout_margin="30dp"
                android:visibility="gone"
                android:layout_height="wrap_content"></FrameLayout>

            <FrameLayout
                android:id="@+id/roomz99_logo_splash"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_60sdp"
                android:background="@drawable/logo_99roomz_red">
            </FrameLayout>

            <TextView
                android:id="@+id/roomz99_logo_splash_text"
                android:layout_below="@+id/roomz99_logo_splash"
                android:textSize="@dimen/_12sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                style="@style/Font_family_light1"
                android:textColor="#009688"
                android:layout_marginTop="@dimen/_5sdp"
                android:textStyle="bold"
                android:text="Login with phone number"
                android:layout_height="wrap_content" />

            <ScrollView
                android:layout_below="@+id/roomz99_logo_splash_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:orientation="horizontal">
                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:elevation="@dimen/_5sdp"
                                android:background="@color/white"
                                android:layout_margin="@dimen/_5sdp">
                                <TextView
                                    android:padding="@dimen/_10sdp"
                                    android:id="@+id/country"
                                    android:textStyle="bold"
                                    style="@style/Font_family_light1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/rect_light_back"
                                    android:hint="+91"
                                    android:maxLines="1"
                                    android:textSize="@dimen/text_20" />
                            </androidx.cardview.widget.CardView>


                            <androidx.cardview.widget.CardView
                                android:id="@+id/input_number_card_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:elevation="@dimen/_5sdp"
                                android:background="@color/white"
                                android:layout_margin="@dimen/_5sdp">
                                <EditText
                                    android:id="@+id/phone_num"
                                    style="@style/username_edittext_style"
                                    android:hint="@{ phoneNumbrHint}" />

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:background="@color/white"
                            android:layout_margin="@dimen/_5sdp">
                            <Button
                                android:id="@+id/login"
                                android:text="Continue"
                                style="@style/generic_button_style"></Button>
                        </androidx.cardview.widget.CardView>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_left_16"
                            android:layout_marginTop="@dimen/margin_top_16"
                            android:visibility="gone"
                            android:layout_marginRight="@dimen/margin_right_16"
                            android:layout_marginBottom="@dimen/margin_bottom_16"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_left_16"
                                android:layout_marginRight="@dimen/margin_right_16"
                                android:layout_marginBottom="@dimen/margin_bottom_8"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-regular"
                                android:gravity="start"
                                android:paddingTop="@dimen/padding_16"
                                android:paddingBottom="@dimen/padding_16"
                                android:text="Create Account"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_20"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_left_16"
                                android:layout_marginRight="@dimen/margin_right_16"
                                android:layout_marginBottom="@dimen/margin_bottom_8"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif-regular"
                                android:gravity="end"
                                android:paddingTop="@dimen/padding_16"
                                android:paddingBottom="@dimen/padding_16"
                                android:text="Need Help?"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_20"
                                android:visibility="visible" />


                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/_5sdp"
                        android:background="@color/white"
                        android:layout_margin="@dimen/_10sdp">
                        <TextView
                            android:id="@+id/login_or"
                            android:text="or"
                            style="@style/textview_or"></TextView>
                    </androidx.cardview.widget.CardView>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:background="@color/white"
                            android:layout_margin="@dimen/_5sdp">
                            <TextView
                                android:gravity="center"
                                android:textStyle="bold"
                                android:padding="@dimen/_10sdp"
                                android:drawableLeft="@drawable/ic_fb_splash"
                                android:text="Login With Facebook"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:background="@color/white"
                            android:layout_margin="@dimen/_5sdp">
                            <TextView
                                android:gravity="center"
                                android:textStyle="bold"
                                android:padding="@dimen/_10sdp"
                                android:drawableLeft="@drawable/ic_gmail"
                                android:text="Login With Gmail"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="@dimen/_5sdp"
                            android:background="@color/white"
                            android:layout_margin="@dimen/_5sdp">
                            <TextView
                                android:id="@+id/login_with_email"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:padding="@dimen/_7sdp"
                                android:drawableLeft="@drawable/ic_mail"
                                android:text="Login With Username"
                                android:textSize="@dimen/_12sdp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"></TextView>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>



                </LinearLayout>


            </ScrollView>
            <LinearLayout

                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/textview_bottom_details"
                    android:text="By clicking Continue, you agree to our Terms and Conditions." />
                <TextView

                    android:id="@+id/login_tandc"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions."
                    android:textColor="#ff5252"
                    style="@style/Font_family_light1"
                    android:textSize="14dp" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>

